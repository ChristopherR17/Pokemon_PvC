<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.projecte.ControllerBattleResult"
            prefWidth="810" prefHeight="610"
            minWidth="810" minHeight="610"
            style="-fx-background-color: linear-gradient(to bottom right, #ffecd2, #fcb69f, #a1c4fd, #c2e9fb);">

    <top>
        <Label fx:id="resultTitle" 
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 80px; -fx-font-weight: bold; -fx-text-fill: #fff700;
                      -fx-effect: dropshadow(gaussian, #ff5e62, 20, 0.7, 0, 4);
                      -fx-font-family: 'Comic Sans MS', 'Comic Sans', cursive;">
            <padding>
                <Insets top="30" right="20" bottom="20" left="20"/>
            </padding>
        </Label>
    </top>

    <center>
        <StackPane>
            <VBox alignment="CENTER" spacing="35"
                  style="-fx-background-color: rgba(255,255,255,0.92); -fx-background-radius: 30; -fx-border-radius: 30; -fx-border-width: 4; -fx-border-color: linear-gradient(to right, #43cea2, #185a9d);">
                <padding>
                    <Insets top="35" right="35" bottom="35" left="35"/>
                </padding>
                
                <ImageView fx:id="resultImage" fitWidth="320" fitHeight="320" preserveRatio="true" 
                           style="-fx-effect: dropshadow(gaussian, #ff5e62, 30, 0.8, 0, 0);"/>
                
                <Label fx:id="resultMessage" 
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #185a9d;
                              -fx-font-family: 'Comic Sans MS', 'Comic Sans', cursive;"
                       alignment="CENTER"/>
                
                <VBox spacing="12" alignment="CENTER">
                    <Label text="Tus Pokémon" 
                           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #43cea2;
                                  -fx-font-family: 'Comic Sans MS', 'Comic Sans', cursive;"/>
                    <HBox spacing="25" alignment="CENTER">
                        <VBox alignment="CENTER" spacing="7">
                            <ImageView fx:id="playerPokemon1" fitWidth="90" fitHeight="90"
                                       style="-fx-effect: dropshadow(gaussian, #f7971e, 15, 0.7, 0, 0);"/>
                            <Label fx:id="playerName1" style="-fx-font-size: 17px; -fx-text-fill: #185a9d; -fx-font-family: 'Comic Sans MS', 'Comic Sans', cursive;"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="7">
                            <ImageView fx:id="playerPokemon2" fitWidth="90" fitHeight="90"
                                       style="-fx-effect: dropshadow(gaussian, #43cea2, 15, 0.7, 0, 0);"/>
                            <Label fx:id="playerName2" style="-fx-font-size: 17px; -fx-text-fill: #185a9d; -fx-font-family: 'Comic Sans MS', 'Comic Sans', cursive;"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="7">
                            <ImageView fx:id="playerPokemon3" fitWidth="90" fitHeight="90"
                                       style="-fx-effect: dropshadow(gaussian, #185a9d, 15, 0.7, 0, 0);"/>
                            <Label fx:id="playerName3" style="-fx-font-size: 17px; -fx-text-fill: #185a9d; -fx-font-family: 'Comic Sans MS', 'Comic Sans', cursive;"/>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="50" 
              BorderPane.alignment="CENTER">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>
            
            <Button fx:id="backToMenuButton" text="Menú Principal" 
                    style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;
                           -fx-background-color: linear-gradient(to right, #43cea2, #185a9d);
                           -fx-background-radius: 30; -fx-padding: 12 36;
                           -fx-effect: dropshadow(gaussian, #43cea2, 8, 0.5, 0, 2);
                           -fx-font-family: 'Comic Sans MS', 'Comic Sans', cursive;"/>
            
            <Button fx:id="restartBattleButton" text="Nueva Batalla" 
                    style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;
                           -fx-background-color: linear-gradient(to right, #ff5e62, #f7971e);
                           -fx-background-radius: 30; -fx-padding: 12 36;
                           -fx-effect: dropshadow(gaussian, #ff5e62, 8, 0.5, 0, 2);
                           -fx-font-family: 'Comic Sans MS', 'Comic Sans', cursive;"/>
        </HBox>
    </bottom>
</BorderPane>