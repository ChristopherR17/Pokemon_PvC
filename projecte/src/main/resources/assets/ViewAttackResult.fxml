<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.projecte.ControllerAttackResult"
            prefWidth="800" prefHeight="550"
            style="-fx-background-color: linear-gradient(to bottom, #fceabb 0%, #f8b500 100%);">

    <top>
        <Label fx:id="winnerLabel"
               text="GANADOR"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 80px; -fx-font-weight: bold; -fx-text-fill: #ff3c3c; -fx-effect: dropshadow(gaussian, white, 10, 0.5, 0, 2);" />
    </top>

    <center>
        <HBox spacing="60" alignment="CENTER">
            <!-- Player Team -->
            <VBox spacing="18" alignment="CENTER">
                <Label text="Tu equipo" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1976d2;"/>
                <HBox spacing="18" alignment="CENTER">
                    <VBox alignment="CENTER">
                        <ImageView fx:id="playerPokemon1" fitWidth="100" fitHeight="100"/>
                        <Label fx:id="playerName1" style="-fx-font-size: 16px; -fx-text-fill: #1976d2;"/>
                    </VBox>
                    <VBox alignment="CENTER">
                        <ImageView fx:id="playerPokemon2" fitWidth="100" fitHeight="100"/>
                        <Label fx:id="playerName2" style="-fx-font-size: 16px; -fx-text-fill: #1976d2;"/>
                    </VBox>
                    <VBox alignment="CENTER">
                        <ImageView fx:id="playerPokemon3" fitWidth="100" fitHeight="100"/>
                        <Label fx:id="playerName3" style="-fx-font-size: 16px; -fx-text-fill: #1976d2;"/>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Enemy Team -->
            <VBox spacing="18" alignment="CENTER">
                <Label text="Equipo enemigo" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;"/>
                <HBox spacing="18" alignment="CENTER">
                    <VBox alignment="CENTER">
                        <ImageView fx:id="enemyPokemon1" fitWidth="100" fitHeight="100"/>
                        <Label fx:id="enemyName1" style="-fx-font-size: 16px; -fx-text-fill: #d32f2f;"/>
                    </VBox>
                    <VBox alignment="CENTER">
                        <ImageView fx:id="enemyPokemon2" fitWidth="100" fitHeight="100"/>
                        <Label fx:id="enemyName2" style="-fx-font-size: 16px; -fx-text-fill: #d32f2f;"/>
                    </VBox>
                    <VBox alignment="CENTER">
                        <ImageView fx:id="enemyPokemon3" fitWidth="100" fitHeight="100"/>
                        <Label fx:id="enemyName3" style="-fx-font-size: 16px; -fx-text-fill: #d32f2f;"/>
                    </VBox>
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>

