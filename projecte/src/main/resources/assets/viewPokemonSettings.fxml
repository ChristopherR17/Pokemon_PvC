<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="610.0" minWidth="810.0" prefHeight="610.0" prefWidth="810.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projecte.ControllerPokemonSettings">
    <children>
        <!-- Fondo: se declara primero para estar en el fondo -->
        <ImageView fitHeight="610.0" fitWidth="810.0" preserveRatio="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <image>
                <Image url="@../img/fondoSettings.png" />
            </image>
        </ImageView>
        
        <!-- Botón Back, que estará encima del fondo -->
        <Button fx:id="backButton" layoutX="20.0" layoutY="20.0" onAction="#handleBackButton" style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill:rgb(0, 0, 0); -fx-background-color: linear-gradient(to bottom, #FFD700, #F2A900); -fx-border-color: #000000; -fx-border-width: 2; -fx-border-radius: 15; -fx-background-radius: 15;" text="← Back">
            <effect>
                <DropShadow color="black" offsetX="2.0" offsetY="2.0" radius="5.0" />
            </effect>
        </Button>
        
        <!-- Título -->
        <Label layoutX="115.0" layoutY="57.0" style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 45; -fx-font-weight: bold; -fx-text-fill: #FFCC00; -fx-effect: dropshadow(gaussian, black, 15, 0.8, 0, 0);" text="Pokémon Settings" />
        
        <!-- Configuración del nickname -->
        <VBox layoutX="72.0" layoutY="135.0" prefHeight="188.0" prefWidth="466.0" spacing="15" style="-fx-background-color: rgba(0, 0, 0, 0.8); -fx-padding: 20; -fx-border-color: #FFCC00; -fx-border-width: 3; -fx-border-radius: 15; -fx-background-radius: 15;">
            <children>
                <HBox>
                    <children>
                        <Label style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 25; -fx-font-weight: bold; -fx-text-fill: #FFCC00;" text="Pokémon Nickname" />
                    </children>
                </HBox>
                <HBox prefHeight="30.0" prefWidth="411.0" spacing="10">
                    <children>
                        <TextField fx:id="nicknameField" prefWidth="300.0" promptText="Enter nickname..." style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 18; -fx-background-radius: 10;" />
                    </children>
                </HBox>
                <Button fx:id="saveNicknameButton" style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #FFCC00; -fx-background-color: linear-gradient(to bottom, #3c5ecc, #2e42a7); -fx-border-color: #000000; -fx-border-width: 3; -fx-border-radius: 15; -fx-background-radius: 15;" text="Save Nickname" />
            </children>
        </VBox>
        
        <!-- Sección: Modificar Estadísticas -->
        <VBox layoutX="359.0" layoutY="339.0" spacing="15" style="-fx-background-color: rgba(0, 0, 0, 0.8); -fx-padding: 20; -fx-border-color: #FFCC00; -fx-border-width: 3; -fx-border-radius: 15; -fx-background-radius: 15;">
            <children>
                <Label style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 25; -fx-font-weight: bold; -fx-text-fill: #FFCC00;" text="Modify Pokémon Statistics" />
                <HBox spacing="10">
                    <children>
                        <Label style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 20; -fx-text-fill: white;" text="Attack:" />
                        <Button style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #FFCC00; -fx-background-color: linear-gradient(to bottom, #FF4500, #CC0000); -fx-border-color: #000000; -fx-border-width: 3; -fx-border-radius: 15; -fx-background-radius: 15;" text="Use X Attack" fx:id="xAttackButton" />
                    </children>
                </HBox>
                <HBox spacing="10">
                    <children>
                        <Label style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 20; -fx-text-fill: white;" text="Defense:" />
                        <Button style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #FFCC00; -fx-background-color: linear-gradient(to bottom, #3c9a0c, #2e8207); -fx-border-color: #000000; -fx-border-width: 3; -fx-border-radius: 15; -fx-background-radius: 15;" text="Use X Defense" fx:id="xDefenseButton" />
                    </children>
                </HBox>
                <HBox spacing="10">
                    <children>
                        <Label style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 20; -fx-text-fill: white;" text="Maximize Statistic:" />
                        <Button fx:id="bottleCapButton" style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #FFCC00; -fx-background-color: linear-gradient(to bottom, #3c5ecc, #2e42a7); -fx-border-color: #000000; -fx-border-width: 3; -fx-border-radius: 15; -fx-background-radius: 15;" text="Use Bottle Cap" />
                    </children>
                </HBox>
            </children>
        </VBox>
        
        <!-- Sección: Disponibilidad de Ítems -->
        <VBox layoutX="72.0" layoutY="394.0" spacing="15" style="-fx-background-color: rgba(0, 0, 0, 0.8); -fx-padding: 15; -fx-border-color: #FFCC00; -fx-border-width: 3; -fx-border-radius: 15; -fx-background-radius: 15;">
            <children>
                <Label style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 25; -fx-font-weight: bold; -fx-text-fill: #FFCC00;" text="Item Availability" />
                <HBox spacing="20">
                    <children>
                        <Label style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 20; -fx-text-fill: white;" text="X Attack:" />
                        <Label style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 20; -fx-text-fill: white;" text="Available: 0" fx:id="xAttackAvailable" />
                    </children>
                </HBox>
                <HBox spacing="20">
                    <children>
                        <Label style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 20; -fx-text-fill: white;" text="X Defense:" />
                        <Label style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 20; -fx-text-fill: white;" text="Available: 0" fx:id="xDefenseAvailable" />
                    </children>
                </HBox>
                <HBox spacing="20">
                    <children>
                        <Label style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 20; -fx-text-fill: white;" text="Bottle Cap:" />
                        <Label fx:id="bottleCapAvailable" style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 20; -fx-text-fill: white;" text="Available: 0" />
                    </children>
                </HBox>
            </children>
        </VBox>
        
        <!-- Imagen Secundaria del Pokémon -->
        <ImageView fx:id="pokemonImageView" fitHeight="188.0" fitWidth="218.0" layoutX="561.0" layoutY="125.0" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 0);" />
        
        <!-- Label Secundario del Nombre -->
        <Label fx:id="labelPokemonName" layoutX="607.0" layoutY="57.0" style="-fx-font-family: 'Comic Sans MS'; -fx-font-size: 45; -fx-font-weight: bold; -fx-text-fill: #FFCC00; -fx-effect: dropshadow(gaussian, black, 15, 0.8, 0, 0);" text="Name" />
    </children>
</AnchorPane>
