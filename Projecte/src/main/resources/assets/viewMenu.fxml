<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projecte.ControllerMenu">
    <children>
        <!-- Fondo dinámico -->
        <ImageView fx:id="fondoMenu" fitHeight="600.0" fitWidth="800.0" preserveRatio="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <image>
                <Image url="@../img/fondoMenu.png" />
            </image>
        </ImageView>
        
        <!-- Título estilo videojuego -->
        <Label layoutX="186.0" layoutY="41.0" style="-fx-font-size: 45; -fx-font-weight: bold; -fx-text-fill: yellow; -fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 0);" text="Pokémon PvP Menu" />

        <HBox layoutX="186.0" layoutY="163.0" prefHeight="240.0" prefWidth="551.0">
            <children>
                <VBox spacing="50.0">
                    <children>
                        <!-- Botones existentes sin cambios -->
                        <Button onAction="#handleTeamManagement" style="-fx-font-size: 20; -fx-text-fill: white; -fx-background-color: linear-gradient(to bottom, #ff4500, #cc0000); -fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, black, 10, 0.8, 0, 3);" text="Team Management" />
                        <Button onAction="#handleBattleHistory" style="-fx-font-size: 20; -fx-text-fill: white; -fx-background-color: linear-gradient(to bottom, #ff4500, #cc0000); -fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, black, 10, 0.8, 0, 3);" text="Battle History" />
                        <Button onAction="#handleStartBattle" style="-fx-font-size: 20; -fx-text-fill: white; -fx-background-color: linear-gradient(to bottom, #ff4500, #cc0000); -fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, black, 10, 0.8, 0, 3);" text="Start New Battle" />
                        <Button onAction="#handleExitGame" style="-fx-font-size: 20; -fx-text-fill: white; -fx-background-color: linear-gradient(to bottom, #ff4500, #cc0000); -fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, black, 10, 0.8, 0, 3);" text="Exit Game" />
                    </children>
                </VBox>
                
                <!-- Estadísticas del jugador con diseño actualizado -->
                <VBox spacing="30.0" style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-padding: 15; -fx-border-color: yellow; -fx-border-width: 3; -fx-border-radius: 10; -fx-background-radius: 10;">
                    <children>
                        <Label style="-fx-font-size: 25; -fx-font-weight: bold; -fx-text-fill: yellow;" text="Player Statistics" />
                        <Label fx:id="playerLevel" style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" text="Level: 2" />
                        <Label fx:id="playerPoints" style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" text="Points: 2345" />
                        <Label fx:id="battlesWon" style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" text="Battles Won: 15" />
                        <Label fx:id="consecutiveWins" style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" text="Max Consecutive Wins: 3" />
                        <Label fx:id="pokemonCaught" style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" text="Pokémon Caught: 5" />
                    </children>
                    <HBox.margin>
                        <Insets left="80.0" />
                    </HBox.margin>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
