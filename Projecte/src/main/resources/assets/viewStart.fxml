<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projecte.ControllerStart">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
         </padding>
         <children>
            <!-- Logo -->
            <ImageView fx:id="logoImageView" fitHeight="80.0" fitWidth="240.0" pickOnBounds="true" preserveRatio="true" />

            <!-- Botón personalizado tipo Pokébola -->
            <Button fx:id="openGameButton" style="                 -fx-background-color: linear-gradient(#ff1a1a, #cc0000);                 -fx-text-fill: white;                 -fx-font-size: 18px;                 -fx-font-weight: bold;                 -fx-background-radius: 30;                 -fx-padding: 10 30;                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 8, 0.5, 0, 2);" text="Open Game" />
         </children>
      </VBox>
   </children>
</AnchorPane>
